{
	//-------- Files configuration --------

	// Configure glob patterns for excluding files and folders.
	"files.exclude": {
		"node_modules": true,
		"bower_components": true,
		"client/**/*.js": { "when": "$(basename).ts" },
		"client/**/*.map": { "when": "$(basename)" }
	}
}